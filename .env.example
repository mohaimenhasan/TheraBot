# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name
AZURE_OPENAI_API_VERSION=2023-05-15

# Azure Communication Services (Optional - for production WhatsApp integration)
AZURE_COMMUNICATION_CONNECTION_STRING=your_connection_string
AZURE_COMMUNICATION_WHATSAPP_PHONE_NUMBER=your_whatsapp_number

# WhatsApp Web.js Configuration (for development)
WHATSAPP_SESSION_DATA_PATH=./session_data

# Server Configuration
PORT=3000
HOST=localhost

# Admin Configuration
ADMIN_API_KEY=your_secure_api_key_for_admin_functions
ADMIN_CONTACT=support@example.com


# Twilio Configuration
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886  # This is Twilio's sandbox number